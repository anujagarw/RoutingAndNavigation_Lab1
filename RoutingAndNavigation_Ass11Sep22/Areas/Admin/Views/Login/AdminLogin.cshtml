@model RoutingAndNavigation_Ass11Sep22.Areas.Admin.Models.LoginViewModel
@{
    ViewData["Title"] = "AdminLogin";
    Layout = "_LayoutLogin";
}

<h1>AdminLogin</h1>

<form asp-area="Admin" asp-action="AdminLogin" asp-controller="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">        
        UserName: <input type="text" asp-for="Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        Password: <input type="password" asp-for="Password" />
    </div>
    <div class="form-group">
        <input type="submit" value="Login" />
    </div>
</form>


